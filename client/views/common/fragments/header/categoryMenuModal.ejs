<div class="categoryListNavbar hide" id="categoryListNavbar">
	<!-- cargar lista de categorias directamente de la base de datos. -->
	<% it.data.cats.forEach(function(categoria){ %>
		<% if (categoria.type === 0){ %>
			<a href="/<%= categoria.content.tid %>" class="categoryItem">
				<div class="categoryItemIcon"><img src="<%= categoria.content.media.icon %>" alt=""></div>
				<div class="categoryItemTitle"><%= categoria.content.name %></div>
			</a>
		<% } %>
	<% }); %>			
</div>