<script>
	/* EVENTOS */
	//EVENTO: al cambiar el switch del darkmode.
	$("#dkswitch").on('change', function() {
		if ($(this).is(':checked')) {
			darkmode(true);
		} else {
			darkmode(false);
		}
	});

	/* FUNCIONES */
	function darkmode(toggle){
		applyConfig("darkmode:" + toggle);
		html.dataset.theme = (toggle) ? "darkmode" : "";
	}
</script>