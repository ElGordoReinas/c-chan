<meta charset="utf-8">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- metadatos para el buscador -->
<% if (it.kind.search("tema") === -1) { %>
<title>Cchan</title>
<meta property="og:title" content="Cchan">
<meta property="og:image" content="/assets/logo.png">
<meta name="description" content="Bienvenido a Cchan, un imageboard anÃ³nimo">
<meta name="keywords" content="Voxed, Social, Imageboard">
<% } else { 
let BOX = it.data.boxs[0];
let keywords = BOX.content.title.split(" ").join(", ");
%>
<title>Cchan - <%= BOX.content.title %></title>
<meta property="og:title" content="<%= BOX.content.title %>">
<meta property="og:image" content="<%= BOX.img.preview %>">
<meta name="description" content="<%= BOX.content.body.substr(0,200) %>">
<meta name="keywords" content="<%= keywords %>, Voxed, Social, Imageboard">
<% } %>

<% if ((it.sesion.config) ? it.sesion.config.darkmode : false) { %>
	<meta name="theme-color" content="#0a0a0a">
	<meta name="msapplication-TileColor" content="#0a0a0a">
	<meta name="msapplication-navbutton-color" content="#0a0a0a">
	<meta name="apple-mobile-web-app-status-bar-style" content="#0a0a0a">
<% } else { %>
	<meta name="theme-color" content="#fbfbfb">
	<meta name="msapplication-TileColor" content="#fbfbfb">
	<meta name="msapplication-navbutton-color" content="#fbfbfb">
	<meta name="apple-mobile-web-app-status-bar-style" content="#fbfbfb">
<% } %>

<link rel="shortcut icon" href="/favicon.ico">

<!-- Aca iran los estilos css cargados en el header -->
<link rel="stylesheet" rel="preload" as="style" href="/css/cchan.css">

<!-- carga de configuraciones y temas en el head. -->
<script>
	const html = document.getElementsByTagName('html')[0];
	var darkmode = <%= (it.sesion.config) ? it.sesion.config.darkmode : false %>;
	//seleccionar tema
	html.dataset.theme = (darkmode) ? "darkmode" : "";
</script>

<!-- modificaciones de tema del usuario. -->
<style>
<%= it.sesion.config.theme %>
</style>